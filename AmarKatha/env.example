# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=1

# Database Configuration
# For SQLite (default)
DATABASE_URL=sqlite:///app.db

# For PostgreSQL (uncomment and configure when using Docker)
# DATABASE_URL=postgresql://amarkatha_user:amarkatha_password@localhost:5432/amarkatha

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=app/static/uploads

# PostgreSQL Docker Configuration (if using docker-compose)
POSTGRES_DB=amarkatha
POSTGRES_USER=amarkatha_user
POSTGRES_PASSWORD=amarkatha_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432 